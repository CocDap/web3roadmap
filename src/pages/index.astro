---
import Container from "../components/Container.astro";
import Layout from "../layouts/MainLayout.astro";
import { getRoadmapsByTag } from "../lib/roadmap";

const roadmapsBySkill = await getRoadmapsByTag("skill-based");
---

<Layout>
  <Container>
    <main>
      <div class="flex justify-start items-center">
        <h1 class="text-4xl font-bold text-center py-14">
          Opensource Roadmap For Next-Gen Developers
        </h1>
      </div>
    </main>

    <div class="space-y-2">
      <h1>Skill Based Roadmap</h1>
      {
        roadmapsBySkill
          .filter((roadmapItem) => !roadmapItem.frontmatter.isHidden)
          .map((roadmapItem) => (
            <a
              href={roadmapItem.id}
              class="px-4 py-2 border block w-fit rounded"
            >
              {roadmapItem.frontmatter.briefTitle}
            </a>
          ))
      }
    </div>
  </Container>
</Layout>
